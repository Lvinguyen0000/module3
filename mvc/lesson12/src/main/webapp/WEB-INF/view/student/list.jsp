        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Quản lý học viên</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="index.html">Bảng điều khiển</a></li>
                    <li class="breadcrumb-item active">Danh sách học viên</li>
                </ol>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Danh sách học viên
                    </div>
                    <div class="card-body">
                        <c:if test="${message != null}">
                            <div class="alert alert-danger" role="alert">
                                ${message}
                            </div>
                        </c:if>
                        <table id="datatablesSimple">
                            <thead>
                            <tr>
                                <th>Mã số</th>
                                <th>Tên</th>
                                <th>Tuổi</th>
                                <th>Email</th>
                                <th>Điện thoại</th>
                                <th>Đại chỉ</th>
                                <th>Lớp</th>
                                <th>
                                    <a class="btn btn-success text-light" href="<c:url value="/students/add"/>">Thêm </a>
                                </th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Mã số</th>
                                <th>Tên</th>
                                <th>Tuổi</th>
                                <th>Email</th>
                                <th>Điện thoại</th>
                                <th>Đại chỉ</th>
                                <th>Lớp</th>
                                <th>
                                    <a class="btn btn-success text-light" href="<c:url value="/students/add"/>">Thêm </a>
                                </th>
                            </tr>
                            </tfoot>
                            <tbody>
                            <c:forEach items="${students}" var="student">
                                <tr>
                                    <td>${student.id}</td>
                                    <td>${student.fullName}</td>
                                    <td>${student.age}</td>
                                    <td>${student.email}</td>
                                    <td>${student.phone}</td>
                                    <td>${student.address}</td>
                                    <td>${student.clazzId}</td>
                                    <td>
                                        <a class="btn btn-primary" href="<c:url value="/students/detail?id=${student.id}"/>">Xem</a>
                                        <a class="btn btn-warning" href="<c:url value="/students/edit?id=${student.id}"/>">Sửa</a>
                                        <a class="btn btn-danger" href="<c:url value="/students/remove?id=${student.id}"/>">Xóa</a>
                                    </td>
                                </tr>
                            </c:forEach>
                            </tbody>
                        </table>
